             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="VFSMonitor.MainPage">

    <StackLayout VerticalOptions="Center">
        <Button Style="{StaticResource MenuButtonStyle}" Text="Globalne" Clicked="Global_Clicked"/>
        <Button Style="{StaticResource MenuButtonStyle}" Text="Użytkownicy" Clicked="Users_Clicked"/>
        <Button Style="{StaticResource MenuButtonStyle}" Text="Sesje" Clicked="Sessions_Clicked"/>
    </StackLayout>
</ContentPage>
